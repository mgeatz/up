<section class="flight_picker">

  {{#if (not outboundFlight)}}
    <h5>
      <span class="current">Choose Outbound Flight</span>
    </h5>
    {{#each outboundFlightTimes as | flightOut |}}
      <div class="panel panel-default outbound_flights">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <h4>{{flightOut.takeoff}} - {{flightOut.landing}}</h4>
              <small>{{dateOfDeparture}}</small>
              <br>
              <h6 class="architect">UP Airway</h6>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-5 col-md-pull-1">
              <p>3h 20m (Nonstop)</p>
              <small>
                {{#if arizona}}AZ, Scottsdale{{/if}}
                {{#if minnesota}}MN, Eden Prairie{{/if}}
                {{#if florida}}FL, Miami{{/if}}
                {{#if (eq destination "ARIZONA")}} → AZ, Scottsdale{{/if}}
                {{#if (eq destination 'FLORIDA')}} → FL, Miami{{/if}}
                {{#if (eq destination 'MINNESOTA')}} → MN, Eden Prairie{{/if}}
                <br>
                <sup>
                  {{#if arizona}}(Scottsdale Airport){{/if}}
                  {{#if minnesota}}(Flying Cloud Airport){{/if}}
                  {{#if florida}}(Miami Exec. Airport){{/if}}
                  {{#if (eq destination "ARIZONA")}} → (Scottsdale Airport){{/if}}
                  {{#if (eq destination 'FLORIDA')}} → (Miami Exec. Airport){{/if}}
                  {{#if (eq destination 'MINNESOTA')}} → (Flying Cloud Airport){{/if}}
                </sup>
              </small>
              <br>
              <b>Flight {{flightOut.id}}</b>
              <br>
              <h6>11 Remaining Seats</h6>
            </div>
            <div class="col-xs-6 col-sm-2 col-sm-pull-1">
              <h4>$1,399</h4>
              <h6><sup>per person</sup></h6>
              <br class="hidden-xs"><sub>one way</sub>
            </div>
            <div class="col-xs-6 col-sm-1 col-sm-pull-1">
              <button class="btn btn-success" {{action "selectOutboundFlight" flightOut}}>Select</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}

  {{#if outboundFlight}}
    {{#if dateOfReturn}}
      <h5>
        <span class="not_current" {{action "backToOutboudFlights"}}>Update Outbound Flight</span>
        ←→
        <span class="current">Choose Return FLight</span>
      </h5>
      {{#each returnFlightTimes as | flightReturn |}}
        <div class="panel panel-default return_flights">
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-12 col-sm-4">
                <h4>{{flightReturn.takeoff}} - {{flightReturn.landing}}</h4>
                <small>{{dateOfReturn}}</small>
                <br>
                <h6 class="architect">UP Airway</h6>
              </div>
              <div class="col-xs-12 col-sm-6 col-md-5 col-md-pull-1">
                <p>3h 20m (Nonstop)</p>
                <small>
                  {{#if (eq destination "ARIZONA")}}AZ, Scottsdale{{/if}}
                  {{#if (eq destination 'FLORIDA')}}FL, Miami{{/if}}
                  {{#if (eq destination 'MINNESOTA')}}MN, Eden Prairie{{/if}}
                  {{#if arizona}} → AZ, Scottsdale{{/if}}
                  {{#if minnesota}} → MN, Eden Prairie{{/if}}
                  {{#if florida}} → FL, Miami{{/if}}
                  <br>
                  <sup>
                    {{#if (eq destination "ARIZONA")}}(Scottsdale Airport){{/if}}
                    {{#if (eq destination 'FLORIDA')}}(Miami Exec. Airport){{/if}}
                    {{#if (eq destination 'MINNESOTA')}}(Flying Cloud Airport){{/if}}
                    {{#if arizona}} → (Scottsdale Airport){{/if}}
                    {{#if minnesota}} → (Flying Cloud Airport){{/if}}
                    {{#if florida}} → (Miami Exec. Airport){{/if}}
                  </sup>
                </small>
                <br>
                <b>Flight {{flightReturn.id}}</b><br>
                <h6>11 Remaining Seats</h6>
              </div>
              <div class="col-xs-6 col-sm-2 col-sm-pull-1">
                <h4>$1,399</h4>
                <h6><sup>per person</sup></h6>
                <sub>per person</sub>
              </div>
              <div class="col-xs-6 col-sm-1 col-sm-pull-1">
                <button class="btn btn-success" {{action "selectReturnFlight" flightReturn}}>Select</button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  {{/if}}

</section>

