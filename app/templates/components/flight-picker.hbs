						<area target="" alt="8" title="8" href="" coords="673,214,742,259" shape="0" >
						<area target="" alt="9" title="9" href="" coords="491,62,562,113" shape="0" >
						<area target="" alt="10" title="10" href="" coords="575,65,649,114" shape="0" >
						<area target="" alt="11" title="11" href="" coords="663,66,736,111" shape="0" >
					</map>
        </div>
      </div>
		{{/each}}
	{{/if}}

	{{#if outboundFlight}}
		{{#if dateOfReturn}}
			<h5>
				<span class="not_current" {{action "backToOutboudFlights"}}>Update Outbound Flight</span>
				←→
				<span class="current">Choose Return FLight</span>
			</h5>
			{{#each returnFlightTimes as | flightReturn |}}
				<div class="panel panel-default return_flights">
					<div class="panel-body">
						<div class="row">
							<div class="col-xs-12 col-sm-2">
								<small>{{dateOfReturn}}</small>
								<h4>{{flightReturn.takeoff}} - {{flightReturn.landing}}</h4>
