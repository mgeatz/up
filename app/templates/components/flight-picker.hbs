<section class="flight_picker">

	{{#if (not outboundFlight)}}
		<h5>
			<span class="current">Choose Outbound Flight</span>
		</h5>
		{{#each outboundFlightTimes as | flightOut |}}
			<div class="panel panel-default outbound_flights">
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-12 col-sm-2">
							<small>{{dateOfDeparture}}</small>
							<h4>{{flightOut.takeoff}} - {{flightOut.landing}}</h4>
							<h6 class="architect">UP Airway</h6>
						</div>
						<div class="col-xs-12 col-sm-6">
							<p>Flight {{flightOut.id}}</p>
							<b>3h 20m (Nonstop)</b><br>
							{{#if arizona}}FROM: Phoenix (Scottsdale Airport, Scottsdale) - TO: Minneapolis (Flying Cloud Airport, Eden Prairie){{/if}}
							{{#if minnesota}}FROM: Minneapolis (Flying Cloud Airport, Eden Prairie) - TO: Phoenix (Scottsdale Airport, Scottsdale){{/if}}
							<br>
							<h4>11 Remaining Seats</h4>
						</div>
						<div class="col-xs-12 col-sm-2">
							<h5>$725 per person</h5>
							<small>one way</small><br>
							<small>Free cancel w/in 48hrs</small>
						</div>
						<div class="col-xs-12 col-sm-2">
							<button class="btn btn-success" {{action "selectOutboundFlight" flightOut}}>Select</button>
							<a data-toggle="collapse" data-target="#{{flightOut.id}}" {{action "showSeats" false}}>
								Show seats
							</a>
						</div>
					</div>
				</div>
			</div>
      <div class="seat_preview collapse" id={{flightOut.id}}>
        <div class="well">helo
					<img src="/b600-1.png" usemap="#image-map1" width="100%">
					<map name="image-map1">
						<area target="" alt="1" title="1" href="" coords="292,50,362,115" shape="0" >
