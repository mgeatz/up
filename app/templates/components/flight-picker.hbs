<section class="flight_picker">

  <h3>Choose Outbound Flight</h3>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12 col-sm-2">
          <sup>{{dateOfDeparture}}</sup>
          <h4>9:00am - 11:00am</h4>
          <h6 class="architect">UP Airway</h6>
        </div>
        <div class="col-xs-12 col-sm-6">
          <p>Flight 341</p>
          <b>3h 20m (Nonstop)</b><br>
          Phoenix (Scottsdale Airport, Scottsdale) - Minneapolis (Flying Cloud Airport, Eden Prairie)<br>
          <h4>9 Remaining Seats</h4>
        </div>
        <div class="col-xs-12 col-sm-2">
          <h5>$725</h5>
          <sup>one way</sup>
          <sup>Free cancel w/in 48hrs</sup>
        </div>
        <div class="col-xs-12 col-sm-2">
          <button class="btn btn-success" {{action "selectFlight"}}>Select</button>
          <a data-toggle="collapse" href="#ce" {{action "showSeats" "ce"}}>
            Show seats
          </a>
        </div>
      </div>

