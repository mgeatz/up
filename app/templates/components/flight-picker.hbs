              <area alt="" title="" shape="poly" coords="320,202,385,201,384,282,322,282"/>
              <area alt="" title="" shape="poly" coords="417,241,473,242,473,282,419,282"/>
              <area alt="" title="" shape="poly" coords="586,160,638,160,638,199,587,200"/>
              <area alt="" title="" shape="poly" coords="585,238,641,237,640,276,587,277"/>
              <area alt="" title="" shape="poly" coords="586,38,643,42,640,78,587,77"/>
            </map>
          </div>
        </div>
			{{/each}}
		{{/if}}
	{{/if}}

</section>

