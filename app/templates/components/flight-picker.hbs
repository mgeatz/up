<section class="flight_picker">

	{{#if (not outboundFlight)}}
		<h5>
			<span class="current">Choose Outbound Flight</span>
		</h5>
		{{#each outboundFlightTimes as | flightOut |}}
			<div class="panel panel-default outbound_flights">
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-12 col-sm-2">
							<small>{{dateOfDeparture}}</small>
							<h4>{{flightOut.takeoff}} - {{flightOut.landing}}</h4>
							<h6 class="architect">UP Airway</h6>
						</div>
						<div class="col-xs-12 col-sm-6">
							<p>Flight {{flightOut.id}}</p>
							<b>3h 20m (Nonstop)</b><br>
							{{#if arizona}}FROM: Phoenix (Scottsdale Airport, Scottsdale) - TO: Minneapolis (Flying Cloud Airport, Eden Prairie){{/if}}
							{{#if minnesota}}FROM: Minneapolis (Flying Cloud Airport, Eden Prairie) - TO: Phoenix (Scottsdale Airport, Scottsdale){{/if}}
							<br>
							<h4>9 Remaining Seats</h4>
						</div>
						<div class="col-xs-12 col-sm-2">
							<h5>$725 per person</h5>
							<small>one way</small><br>
							<small>Free cancel w/in 48hrs</small>
						</div>
						<div class="col-xs-12 col-sm-2">
							<button class="btn btn-success" {{action "selectOutboundFlight" flightOut}}>Select</button>
							<a data-toggle="collapse" data-target="#{{flightOut.id}}" {{action "showSeats" false}}>
								Show seats
							</a>
						</div>
					</div>
				</div>
			</div>
      <div class="seat_preview collapse" id={{flightOut.id}}>
        <div class="well">helo
          <img src="/g2_layout_light.png" alt="" usemap="#Map" width="100%"/>
          <map name="Map" id="Map">
            <area alt="" title="" shape="poly" coords="92,36,95,112,218,113,218,34"/>
            <area alt="" title="" shape="poly" coords="240,39,352,39,354,109,244,109"/>
            <area alt="" title="" shape="poly" coords="418,37,476,38,477,78,420,79"/>
            <area alt="" title="" shape="poly" coords="418,161,475,161,475,202,420,202"/>
            <area alt="" title="" shape="poly" coords="320,202,385,201,384,282,322,282"/>
            <area alt="" title="" shape="poly" coords="417,241,473,242,473,282,419,282"/>
            <area alt="" title="" shape="poly" coords="586,160,638,160,638,199,587,200"/>
            <area alt="" title="" shape="poly" coords="585,238,641,237,640,276,587,277"/>
            <area alt="" title="" shape="poly" coords="586,38,643,42,640,78,587,77"/>
          </map>
        </div>
      </div>
		{{/each}}
	{{/if}}

	{{#if outboundFlight}}
		{{#if dateOfReturn}}
			<h5>
				<span class="not_current" {{action "backToOutboudFlights"}}>Update Outbound Flight</span>
				←→
				<span class="current">Choose Return FLight</span>
			</h5>
			{{#each returnFlightTimes as | flightReturn |}}
				<div class="panel panel-default return_flights">
					<div class="panel-body">
						<div class="row">
							<div class="col-xs-12 col-sm-2">
								<small>{{dateOfReturn}}</small>
								<h4>{{flightReturn.takeoff}} - {{flightReturn.landing}}</h4>
								<h6 class="architect">UP Airway</h6>
							</div>
							<div class="col-xs-12 col-sm-6">
								<p>Flight {{flightReturn.id}}</p>
								<b>3h 20m (Nonstop)</b><br>
								{{#if minnesota}}FROM: Phoenix (Scottsdale Airport, Scottsdale) - TO: Minneapolis (Flying Cloud Airport, Eden Prairie){{/if}}
								{{#if arizona}}FROM: Minneapolis (Flying Cloud Airport, Eden Prairie)- TO: Phoenix (Scottsdale Airport, Scottsdale){{/if}}
								<h4>9 Remaining Seats</h4>
							</div>
							<div class="col-xs-12 col-sm-2">
								<h5>$725 per person</h5>
								<small>one way</small><br>
								<small>Free cancel w/in 48hrs</small>
							</div>
							<div class="col-xs-12 col-sm-2">
								<button class="btn btn-success" {{action "selectReturnFlight" flightReturn}}>Select</button>
								<a data-toggle="collapse" data-target="#{{flightReturn.id}}" {{action "showSeats" false}}>
									Show seats
								</a>
							</div>
						</div>
					</div>
				</div>
        <div class="seat_preview collapse" id={{flightReturn.id}}>
          <div class="well">
            <img src="/g2_layout_light.png" alt="" usemap="#Map" width="100%"/>
            <map name="Map" id="Map">
              <area alt="" title="" shape="poly" coords="92,36,95,112,218,113,218,34"/>
